{
  "name": "scroll-shadow-element",
  "version": "1.1.3",
  "description": "Extends a scrollable element with a scroll shadow effect.",
  "license": "MIT",
  "repository": "ingmarh/scroll-shadow-element",
  "author": "Ingmar Hergst",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "customElements": "./custom-elements.json",
  "files": [
    "dist/**",
    "custom-elements.json"
  ],
  "scripts": {
    "start": "web-dev-server --open demo/",
    "test": "BROWSERS=$([ $CI ] && echo 'chromium webkit firefox' || echo 'chromium firefox') && wtr test/*.test.js --playwright --browsers=$BROWSERS",
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "scroll shadow",
    "scroll indicator",
    "web component",
    "custom element"
  ],
  "devDependencies": {
    "@open-wc/testing": "^3.1.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@web/dev-server": "^0.1.30",
    "@web/dev-server-esbuild": "^0.3.0",
    "@web/test-runner": "^0.13.27",
    "@web/test-runner-playwright": "^0.8.8",
    "@web/test-runner-visual-regression": "^0.6.5",
    "eslint": "^8.13.0",
    "typescript": "^4.6.3",
    "unbuild": "^0.7.2"
  }
}
