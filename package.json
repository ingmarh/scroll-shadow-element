{
  "name": "scroll-shadow-element",
  "version": "2.0.1",
  "description": "A small web component to enhance scrollable elements with dynamic scroll indicators.",
  "license": "MIT",
  "repository": "ingmarh/scroll-shadow-element",
  "author": "Ingmar Hergst",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "customElements": "./custom-elements.json",
  "files": [
    "dist/**",
    "custom-elements.json"
  ],
  "scripts": {
    "start": "web-dev-server --open demo/ --watch",
    "test": "BROWSERS=$([ $CI ] && echo 'chromium webkit firefox' || echo 'chromium firefox') && wtr test/*.test.js --playwright --browsers=$BROWSERS",
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "scroll shadow",
    "scroll indicator",
    "overflow shadow",
    "web component",
    "custom element"
  ],
  "devDependencies": {
    "@open-wc/testing": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@web/dev-server": "^0.1.32",
    "@web/dev-server-esbuild": "^0.3.1",
    "@web/test-runner": "^0.13.31",
    "@web/test-runner-playwright": "^0.8.9",
    "@web/test-runner-visual-regression": "^0.6.5",
    "eslint": "^8.19.0",
    "minify-html-literals": "^1.3.5",
    "tsup": "^6.2.3",
    "typescript": "^4.7.4"
  }
}
